{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.searchField) }}
    <button type="submit" name="btnSearch">Rechercher</button>
    {{ form_end(form) }}

    <br>

    <a href="{{ path('blog_index') }}">
        Testing index() method from BlogController to view all articles.
    </a>
    <h1>All articles from article s table : </h1>
    <li><a href="{{ path('categories_index') }}"><h1>All Categories</h1></a></li>



    {% for article in articles %}
        <div>
            <h2>{{ loop.index }} / {{ article.title }} - Category : {{ article.category.name }}</h2>
            <p>{{ article.content }}</p>
        </div>
    {% endfor %}

    {{ form_start(articleform) }}
    {{ form_row(articleform.title) }}
    {{ form_row(articleform.content) }}
    {{ form_row(articleform.category) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(articleform) }}


    <a href="{{ path('homepage') }}">
        Back to homepage.
    </a>


{% endblock %}